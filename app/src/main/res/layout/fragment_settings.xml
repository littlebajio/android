<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/pinkish">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:textColor="@color/pinkie"
            android:text="Настроение"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/mood_happy"
            android:layout_width="180dp"
            android:layout_height="68dp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/bluiesh"
            android:text="Весёлое" />

        <Button
            android:id="@+id/mood_sad"
            android:layout_width="180dp"
            android:layout_height="68dp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/bluiesh"
            android:text="Грустное" />

        <Button
            android:id="@+id/mood_thrill"
            android:layout_width="180dp"
            android:layout_height="68dp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/bluiesh"
            android:text="Острые ощущения" />

        <Button
            android:id="@+id/mood_curious"
            android:layout_width="180dp"
            android:layout_height="68dp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/bluiesh"
            android:text="Любопытное" />

        <Button
            android:id="@+id/mood_angry"
            android:layout_width="180dp"
            android:layout_height="68dp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/bluiesh"
            android:text="Гнев" />

        <Button
            android:id="@+id/mood_relax"
            android:layout_width="180dp"
            android:layout_height="68dp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/bluiesh"
            android:text="Расслабляющее" />

        <Button
            android:id="@+id/mood_motivating"
            android:layout_width="180dp"
            android:layout_height="68dp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/bluiesh"
            android:text="Мотивирующее" />

    </LinearLayout>
</ScrollView>
